@using MyBlog.Models.ViewModels
@{
    Layout = "_AdminLayout";
    ViewData["CurrentPage"] = "CensorManage";
}

<div class="row align-items-stretch">
    <div class="col-6">
        <div class="card shadow  h-100">
            <div class="card-header py-3 d-flex align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Thể loại</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-borderless" id="categories_table">
                        <thead class="">
                            <tr>
                                <th class="">Thể loại</th>
                            </tr>
                        </thead>
                        <tbody>
                
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 position-relative">
        <div class="card shadow h-100">
            <div class="card-header py-3 d-flex align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Nhân viên kiểm duyệt</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-borderless" id="censors_table" category-id="">
                        <thead>
                            <tr>
                                <th>
                                    <button class="icon-btn invisible px-0 ">
                                        <i class="fa-solid fa-plus invisible"></i>
                                    </button>
                                </th>
                                <th class="position-relative">
                                    Người kiểm duyệt
                                    <button class="icon-btn position-absolute"
                                            style="top: 50%; right: 0; transform: translate(0, -50%)"
                                            onclick="showModal(event)"
                                            data-toggle="modal"
                                            data-target="#add_censor_modal">
                                        <i class="fa-solid fa-plus"></i>
                                    </button>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>

<div class="modal fade" id="add_censor_modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" >Thêm người kiểm duyệt cho thể loại</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-censor-category-form">
                <div class="modal-body">
                    <table id="add_censor_table" class="table table-hover table-borderless">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th>Họ và tên</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/CensorManage.js" type="text/javascript"></script>
}

